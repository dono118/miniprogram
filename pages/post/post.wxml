<!--pages/post/post.wxml-->
<view>
  <swiper indicator-dots="true" autoplay="true" interval="5000" circular="true">
    <swiper-item>
      <image src="../images/post/post-1.jpg"/>
    </swiper-item>
    <swiper-item>
      <image src="../images/post/post-2.jpg" />
    </swiper-item>
    <swiper-item>
      <image src="../images/post/post-3.jpg"/>
    </swiper-item>
  </swiper>

  <block wx:for="{{postDataList}}" wx:for-item="item" wx:key="idx">
    <view class="post-container">
      <view class="post-author-date">
        <image src="{{item.avatar}}" />
        <text>{{item.obj.date}}</text>
      </view>
      <text class="post-title">{{item.title}}</text>
      <image class="post-image" src="{{item.postImg}}" mode="aspectFill" />
      <text class="post-content">{{item.content}}</text>
      <view class="post-like">
        <image src="../images/icon/wx_app_collect.png" />
        <text>{{item.collectNum.array[0]}}</text>
        <image src="../images/icon/wx_app_message.png"></image>
        <text>{{item.messageNum}}</text>
        <image src="../images/icon/wx_app_view.png"></image>
        <text>{{item.readingNum}}</text>
      </view>
    </view>
  </block>
</view>
